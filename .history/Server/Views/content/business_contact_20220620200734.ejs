<div class="container">
    <h1>Business contact</h1>

    <div class="row">
        <div class="col">
            <a href="/add" id="addButton" class="btn btn-primart mb-q"><i class="fas fa-plus-circle"></i>Add</a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Email</th>
                        
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="contactlist">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < business_contact.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= business_contact[count].Name %></td>
                            <td><%= business_contact[count].Number %></td>
                            <td><%= business_contact[count].Email %></td>


                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>