<div class="container">
    <h1 class="col-lg-6 col-md-10 col-sm-10"><%= title %> Business Contact</h1>
    <hr>
    <div id="messageArea"></div>

    <div class="row justify-content-lg-center g-3">
      <form method="POST" class="col-lg-6 col-md-10 col-sm-10">

        <div class="input-group mb-3">
          <span class="input-group-text">Name</span>
          <input id="business_contactName" name="business_contactName" type="text" class="form-control" 
          value="<%= business_contact.Name %>"
          aria-label="business_contact Name" aria-describedby="business_contact Name Input" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Number</span>
            <input id="business_contactDirector" name="business_contactDirector" type="text" class="form-control" 
            value="<%= business_contact.Number %>"
            aria-label="Director Name" aria-describedby="business_contact Director Input" required>
          </div>

        <div class="input-group mb-3">
        <span class="input-group-text">Email</span>
        <input id="business_contactYear" name="business_contactYear" type="text" class="form-control" 
        value="<%= business_contact.Email %>"
        aria-label="business_contact Year" aria-describedby="business_contact Year Input" required>
        </div>
 
        
        <% if(title == "Edit") { %>
        <button id="editButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
        <% } else {%>
        <button id="addButton" type="submit" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
        <% } %>  

        <a href="/business_contact" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</a>
      
      </form>

    </div>
</div>

