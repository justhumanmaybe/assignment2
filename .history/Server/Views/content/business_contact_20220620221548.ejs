<div class="container">
    <h1>Business contact</h1>

    <div class="row">
        <div class="col">
            <a href="/add" id="addButton" class="btn btn-primart mb-q"><i class="fa-solid fa-square-plus"></i>Add contact</a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Email</th>
                        
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="contactlist">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < business_contact.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= business_contact[count].Name %></td>
                            <td><%= business_contact[count].Number %></td>
                            <td><%= business_contact[count].Email %></td>
                            <td class="text-center"><a href="/edit/<%=business_contact[count]._id %>" class="btn-primary btn-sm edit"><i class="fa-solid fa-pen-clip"></i></a></td>
                            <td class="text-center"><a href="/delete/ <%=business_contact[count]._id %>" class="btn-danger btn-sm delete"><i class="fa-solid fa-user-xmark"></i></a></td>



                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>